<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.proiectjavafinal.ProfesorDashboard">
    <children>

        <Label layoutX="86.0" layoutY="22.0" prefHeight="58.0" prefWidth="427.0" style="-fx-text-fill: #2c3e50;" text="Bun venit, domnule profesor!">
            <font>
                <Font name="System Bold" size="30.0" />
            </font>
        </Label>

        <!-- Butoane funcționale -->
        <Button layoutX="200.0" layoutY="100.0" mnemonicParsing="false" onAction="#handleAfiseazaCursuriPredate" prefHeight="50.0" prefWidth="200.0" text="Afișează cursuri predate" />

        <Button layoutX="200.0" layoutY="168.0" mnemonicParsing="false" onAction="#afiseazaTotiStudentii" prefHeight="50.0" prefWidth="200.0" text="Afișează studenți la curs" />

        <Button layoutX="200.0" layoutY="303.0" mnemonicParsing="false" onAction="#noteazaStudent" prefHeight="50.0" prefWidth="200.0" style="-fx-font-size: 14px; -fx-background-color: #e74c3c; -fx-text-fill: white; -fx-border-radius: 5; -fx-background-radius: 5;" text="Notează student" />
      <Button layoutX="200.0" layoutY="230.0" mnemonicParsing="false" prefHeight="50.0" prefWidth="200.0" text="Preda un curs" />
    </children>
</AnchorPane>
